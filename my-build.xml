<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="jars" name="gamecontroller">
    <property environment="env"/>
    <property name="ggpserver.location" value="../ggpserver"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>
    <path id="gamecontroller.classpath">
	    <pathelement location="bin"/>
	    <fileset dir="lib" includes="*.jar"/>
    </path>

	<property name="eclipse.jar" value="${env.ECLIPSEDIR}/lib/eclipse.jar"/>
	<path id="eclipse.classpath">
		<pathelement location="${eclipse.jar}"/>
	</path>

	<target name="init">
        <mkdir dir="bin"/>
	</target>
	
    <target name="clean">
        <delete dir="bin"/>
        <delete file="gamecontroller.jar"/>
        <delete file="gamecontroller-retracer.jar"/>
        <delete file="gamecontroller-cli.jar"/>
        <delete file="gamecontroller-gui.jar"/>
        <delete file="gamecontroller-eclipse-cli.jar"/>
        <delete file="gamecontroller-eclipse-gui.jar"/>
    </target>
	
	<target depends="cli-jar, gui-jar" name="jars"/>

	<target depends="build, build-eclipse-part" name="jar">
	    <jar destfile="gamecontroller.jar" basedir="bin">
			<zipfileset src="${eclipse.jar}" includes="**/*.java **/*.class"/>
			<zipfileset src="lib/ggpbase.jar" includes="**/*.java **/*.class"/>
		</jar>
	</target>

	<target depends="build" name="retracer-jar">
	    <jar destfile="gamecontroller-retracer.jar">
			<manifest>
				<attribute name="Main-Class" value="tud.gamecontroller.traces.RetraceGameControllerRunner"/>
			</manifest>
			<fileset dir="bin">
				<exclude name="stanfordlogic/"/>
				<exclude name="de/"/>
				<exclude name="tud/gamecontroller/gui/"/>
			</fileset>
		 </jar>
    </target>

	<target depends="build" name="gamecontroller-for-ggpserver.jar">
	    <jar destfile="gamecontroller-for-ggpserver.jar">
			<fileset dir="bin">
				<exclude name="stanfordlogic/"/>
				<exclude name="de/"/>
				<exclude name="tud/gamecontroller/gui/"/>
			</fileset>
		 </jar>
    </target>

	<target depends="build" name="cli-jar">
	    <jar destfile="gamecontroller-cli.jar">
			<manifest>
				<attribute name="Main-Class" value="tud.gamecontroller.game.javaprover.GameControllerCLIRunner"/>
			</manifest>
			<fileset dir="bin">
				<exclude name="stanfordlogic/"/>
				<exclude name="de/"/>
				<exclude name="tud/gamecontroller/gui/"/>
			</fileset>
		 </jar>
    </target>

	<target depends="build" name="gui-jar">
	    <jar destfile="gamecontroller-gui.jar">
			<manifest>
				<attribute name="Main-Class" value="tud.gamecontroller.game.javaprover.GameControllerGuiRunner"/>
			</manifest>
			<fileset dir="bin">
				<exclude name="stanfordlogic/"/>
				<exclude name="de/"/>
				<exclude name="tud/gamecontroller/cli/"/>
			</fileset>
		 </jar>
    </target>
	
	<target name="stylesheets.zip">
	<zip destfile="stylesheets.zip">
		<zipfileset dir="resources/stylesheets" prefix="stylesheets">
			<exclude name="**/.svn/"/>
			<exclude name="generic/sitespecific.xsl"/>
		</zipfileset>
		<zipfileset dir="resources/stylesheets-export" prefix="stylesheets">
			<exclude name="**/.svn/"/>
		</zipfileset>
		<zipfileset dir="." prefix="stylesheets">
			<include name="LICENSE"/>
		</zipfileset>
	</zip>
    </target>
	<target depends="clean" name="cleanall"/>
    <target depends="build-subprojects,build-project" name="build"/>
    <target name="build-subprojects"/>
	
	<!-- targets for the Eclipse-Prolog  version -->
	<target depends="eclipse-cli-jar, eclipse-gui-jar" name="eclipse-jars"/>
	
	<target depends="build-eclipse-part" name="eclipse-cli-jar">
	    <jar destfile="gamecontroller-eclipse-cli.jar">
			<manifest>
				<attribute name="Main-Class" value="tud.gamecontroller.game.eclipse.GameControllerCLIRunner"/>
			</manifest>
			<zipfileset src="${eclipse.jar}" includes="**/*.java **/*.class"/>
			<fileset dir="bin">
				<exclude name="stanfordlogic/"/>
				<exclude name="cs227b/"/>
				<exclude name="tud/gamecontroller/game/javaprover/"/>
				<exclude name="tud/gamecontroller/game/jocular/"/>
				<exclude name="de/"/>
				<exclude name="tud/gamecontroller/gui/"/>
			</fileset>
		 </jar>
    </target>
	
	<target depends="build-eclipse-part" name="eclipse-gui-jar">
	    <jar destfile="gamecontroller-eclipse-gui.jar">
			<manifest>
				<attribute name="Main-Class" value="tud.gamecontroller.game.eclipse.GameControllerGuiRunner"/>
			</manifest>
			<zipfileset src="${eclipse.jar}" includes="**/*.java **/*.class"/>
			<fileset dir="bin">
				<exclude name="stanfordlogic/"/>
				<exclude name="cs227b/"/>
				<exclude name="tud/gamecontroller/game/javaprover/"/>
				<exclude name="tud/gamecontroller/game/jocular/"/>
				<exclude name="de/"/>
			</fileset>
		 </jar>
    </target>

	<target depends="init" name="build-eclipse-part">
		<!-- compile everything (including the part that depends on eclipse) -->
        <javac includeantruntime="false" debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
            <src path="java"/>
			<exclude name="tud/gamecontroller/game/jocular/"/>
			<exclude name="cs227b/teamIago/parser/"/>
			<exclude name="cs227b/teamIago/gameProver/"/>
			<exclude name="tud/gamecontroller/game/javaprover/"/>
			<exclude name="tud/gamecontroller/traces/"/>
            <classpath refid="gamecontroller.classpath"/>
            <classpath refid="eclipse.classpath"/>
            <compilerarg value="-Xlint:unchecked"/>
        </javac>
		<!-- copy prolog files -->
		<copy todir="bin">
			<fileset dir="java">
				<include name="**/*.ecl"/>
			</fileset>
		</copy>
	</target>

	<target depends="init" name="build-project">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac includeantruntime="false" debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
            <src path="lib/JavaProver"/>
            <classpath refid="gamecontroller.classpath"/>
            <!--<compilerarg value="-Xlint:unchecked"/>-->
        </javac>
        <javac includeantruntime="false" debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
            <src path="lib/jocular-0.2/Common/src/java"/>
            <classpath refid="gamecontroller.classpath"/>
            <!--<compilerarg value="-Xlint:unchecked"/>-->
        </javac>
        <javac includeantruntime="false" debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
            <src path="lib/jocular-0.2/Jocular/src/java"/>
            <classpath refid="gamecontroller.classpath"/>
            <!--<compilerarg value="-Xlint:unchecked"/>-->
        </javac>
        <javac includeantruntime="false" debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
            <src path="java"/>
			<exclude name="tud/gamecontroller/game/eclipse/"/>
            <classpath refid="gamecontroller.classpath"/>
            <compilerarg value="-Xlint:unchecked"/>
        </javac>
        <javac includeantruntime="false" debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
            <src path="."/>
            <exclude name="java/"/>
            <exclude name="lib/JavaProver/"/>
            <exclude name="lib/jocular-0.2/Common/src/java/"/>
            <exclude name="lib/jocular-0.2/Jocular/src/java/"/>
            <classpath refid="gamecontroller.classpath"/>
            <compilerarg value="-Xlint:unchecked"/>
        </javac>
    </target>
    <target description="Build all projects which reference this project. Useful to propagate changes." name="build-refprojects">
        <ant antfile="${ggpserver.location}/my-build.xml" inheritAll="false" target="clean"/>
        <ant antfile="${ggpserver.location}/my-build.xml" inheritAll="false" target="build"/>
    </target>
    <target name="GameControllerApp">
        <java classname="tud.gamecontroller.gui.GameControllerApp" failonerror="true" fork="yes">
            <classpath refid="gamecontroller.classpath"/>
        </java>
    </target>
</project>
